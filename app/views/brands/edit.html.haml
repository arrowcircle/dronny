%h1
  - if @brand.persisted?
    = t '.form_title_edit'
  - else
    = t '.form_title_new'

= form_for @brand do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :site
    = f.text_field :site
  .actions
    = f.submit 'Save'


= link_to 'Show', @brand
\|
= link_to 'Back', brands_path
